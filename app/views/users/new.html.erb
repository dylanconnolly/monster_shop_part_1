<%= form_tag "/users" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :address, "Street Address" %>
  <%= text_field_tag :address %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %>
  <%= label_tag :email, "Email Address" %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= label_tag :confirm_password, "Confirm Password"%>
  <%= password_field_tag :confirm_password %>
  <%= submit_tag "Submit" %>
<% end %>
